@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registeringen godkendt";
}

@{
    Layout = "LoginLayout";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>
           <a id="confirm-link" href="@Model.EmailConfirmationUrl">Tryk her for at bekræfte din konto</a>
        </p>
    }
    else
    {
        <p>
            Please check your email to confirm your account.
        </p>
    }
}
