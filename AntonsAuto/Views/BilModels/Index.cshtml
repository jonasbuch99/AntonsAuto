@model IEnumerable<AntonsAuto.Models.BilModel>

@{
    ViewData["Title"] = "Modeller";
}

<h1>Modeller</h1>

<p>
    <a asp-action="Create">Opret</a>
</p>

<form asp-action="Index" method="get">
    <div>
        <p>
            <input type="text" name="searchString" placeholder="Indtast søgeord" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Søg" class="btn btn-success" />
            <a asp-action="Index">Nulstil</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["FabrikantSortParam"]"> @Html.DisplayNameFor(model => model.Bilfabrikant)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">@Html.DisplayNameFor(model => model.Navn)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["KoertKmSortParam"]">@Html.DisplayNameFor(model => model.AntalKilometer)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Bilfabrikant.Navn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Navn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AntalKilometer)
                </td>

                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ID">Rediger</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID">Detaljer</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Slet</a>
                </td>
            </tr>
        }
    </tbody>
</table>
