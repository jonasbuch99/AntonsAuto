@model AntonsAuto.Models.Bilfabrikant

@{
    ViewData["Title"] = "Detajler";
}

<h1>Detajler</h1>

<div>
    <h4>Fabrikant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Navn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Navn)
        </dd>
    </dl>



</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Rediger</a> |
    <a asp-action="Index">Tilbage</a>
</div>
<hr />
<h4>Tilknyttede Modeller</h4>

@foreach (var item in Model.BilModels)
{

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Navn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Navn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.AntalKilometer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.AntalKilometer)
            </dd>
        </dl>
    </div>
    
}
